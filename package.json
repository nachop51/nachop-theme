{
  "name": "nachop-theme",
  "displayName": "Nachop theme",
  "description": "Mix of the best VSCode themes",
  "version": "1.3.1",
  "publisher": "nachop51",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nachop51/nachop-theme.git"
  },
  "bugs": {
    "url": "https://github.com/Nachop51/nachop-theme/issues",
    "email": "nachoperalta0@gmail.com"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "dark",
    "light",
    "color",
    "syntax",
    "highlighting",
    "nachop"
  ],
  "homepage": "https://github.com/Nachop51/nachop-theme",
  "contributes": {
    "themes": [
      {
        "label": "Nachop",
        "uiTheme": "vs-dark",
        "path": "./themes/nachop-dark.json"
      },
      {
        "label": "Nachop bordered",
        "uiTheme": "vs-dark",
        "path": "./themes/nachop-dark-bordered.json"
      },
      {
        "label": "Nachop light",
        "uiTheme": "vs",
        "path": "./themes/nachop-light.json"
      },
      {
        "label": "Nachop light bordered",
        "uiTheme": "vs",
        "path": "./themes/nachop-light-bordered.json"
      },
      {
        "label": "Facu",
        "uiTheme": "vs-dark",
        "path": "./themes/nachop-facu.json"
      },
      {
        "label": "Facu bordered",
        "uiTheme": "vs-dark",
        "path": "./themes/nachop-facu-bordered.json"
      }
    ]
  },
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .ts --fix",
    "build": "tsx src/build.ts",
    "dev": "tsx --watch src/build.ts",
    "prepublish": "npm run lint && npm run build",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.4.4",
    "@types/node": "^20.12.11",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.26.1",
    "chroma-js": "^2.4.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "tsx": "^4.11.0",
    "typescript": "^5.4.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "dependencies": {
    "vs-theme-builder": "^1.0.25"
  }
}
